{{!-- bootstrap icon --}}
<link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.5.0/font/bootstrap-icons.css">

{{#if loginFailure}}
<div class="alert alert-danger d-flex align-items-center" role="alert">
  <i class="bi bi-exclamation-octagon-fill"></i>
  <div>
    Sign in failed
  </div>
</div>
{{/if}}

<section class="text-center" id="signin-section">

  <div class="form-signin">
    <form method="POST">
      <h1 class="h3 mb-5 fw-normal">Please Sign In</h1>

      <div class="form-floating">
        <input name="username" type="email" class="form-control" id="username" placeholder="name@example.com">
        <label for="username">Email</label>
      </div>
      <div class="form-floating">
        <input name="password" type="password" class="form-control" id="password" placeholder="Password">
        <label for="password">Password</label>
      </div>
      <button class="w-100 btn btn-lg my-4 shadow" type="submit">Sign in</button>
    </form>
    <hr>
    Need an account? <a href="/sign-up">Sign up</a>

  </div>
</section>